<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:background="@color/black">


        <LinearLayout
            android:layout_weight="12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="bottom|end"
                android:textSize="60sp"/>
            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center|end"
                android:textSize="60sp"
                android:padding="20dp"/>
            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center|end"
                android:textSize="60sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2FFFFFFF"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            />
        <LinearLayout
            android:layout_weight="12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                tools:ignore="NestedWeights">
                <TextView
                    android:id="@+id/boton_c"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="C"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/naranja"
                    />

                <TextView
                    android:id="@+id/boton_porciento"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="%"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:textColor="@color/naranja"
                    />

                <TextView
                    android:id="@+id/boton_divicion"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="/"

                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/naranja"
                    />

                <TextView
                    android:id="@+id/boton_borrar"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="Del"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/naranja"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/boton_7"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="7"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/boton_8"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="8"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/boton_9"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="9"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/boton_x"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="x"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/naranja"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:id="@+id/boton_4"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="4"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/boton_5"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="5"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/white"

                    />

                <TextView
                    android:id="@+id/boton_6"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="6"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/boton_menos"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="-"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:textColor="@color/naranja"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:id="@+id/boton_1"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="1"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/boton_2"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="2"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/boton_3"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="3"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/boton_mas"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="+"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/naranja"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:id="@+id/boton_potencia"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="^"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/naranja"
                    />

                <TextView
                    android:id="@+id/boton_0"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="0"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/boton_coma"
                    android:background="@drawable/botones_redondos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="."
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/boton_igual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="="
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:background="@drawable/boton_igual"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>